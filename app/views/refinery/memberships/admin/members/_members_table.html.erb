<table id="members" cellpadding="0" cellspacing="0" style="visibility: hidden; width: 650px;">
  <thead>
    <tr>
      <th data-column-id="name" align="center" class="sortable"><%= t('full_name', :scope => 'refinery.admin.members') %></th>
      <th data-column-id="email" align="center" class="sortable"><%= t('email', :scope => 'refinery.admin.members') %></th>
      <th data-column-id="created_at" align="center" class="sortable"><%= t('created_at', :scope => 'refinery.admin.members') %></th>
      <% if Refinery::Setting::find_or_set('memberships_timed_accounts', true) %>
      <th data-column-id="member_until" align="center" class="sortable"><%= t('member_until', :scope => 'refinery.admin.members') %></th>
      <% end %>
      <th data-column-id="status" align="center" class="sortable width_35"><%= t('status', :scope => 'refinery.admin.members') %></th>
      <th data-column-id="actions" align="center" class="width_30"></th>
    </tr>
  </thead>
  <tbody>
    <%= render :partial => '/refinery/memberships/admin/members/member', :collection => @members if @members %>
  </tbody>
</table>
