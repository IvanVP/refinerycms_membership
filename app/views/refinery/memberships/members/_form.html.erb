<%= form_for @member, :as => :member, :url => url do |f| %>
  <%= render :partial => "error_messages",
    :locals => {
    :object => @member,
    :include_object_name => true
  } %>

  <%= render :partial => "profile", :locals => {:f => f} %>
  <%= render :partial => "password", :locals => {:f => f} %>

  
  <fieldset class="submit">
    <%= render :partial => "form_actions",
      :locals => {
      # :url => "localhost:3000",
      #:only_path => true,
      :path  => "localhost:3000",
      :f => f,
      :continue_editing => false,
      :hide_delete => true
    }%>

  </fieldset>
<% end %>